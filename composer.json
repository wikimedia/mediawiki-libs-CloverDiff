{
	"name": "legoktm/clover-diff",
	"description": "A tool to create a diff of two clover.xml files",
	"license": "GPL-3.0-or-later",
	"homepage": "https://gitlab.com/legoktm/clover-diff",
	"authors": [
		{
			"name": "Kunal Mehta",
			"email": "legoktm@member.fsf.org"
		}
	],
	"autoload": {
		"psr-4": {
			"Legoktm\\CloverDiff\\": "src/"
		}
	},
	"bin": [
		"bin/clover-diff"
	],
	"require": {
		"ext-simplexml": "*",
		"php": ">=7.4.3",
		"symfony/console": "^5"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "40.0.1",
		"mediawiki/minus-x": "1.1.1",
		"mediawiki/mediawiki-phan-config": "0.12.0",
		"php-parallel-lint/php-parallel-lint": "1.3.2",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"phpunit/phpunit": "^9.5"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpcs -sp",
			"phpunit",
			"phan --allow-polyfill-parser --long-progress-bar",
			"minus-x check ."
		],
		"fix": [
			"phpcbf",
			"minus-x fix ."
		],
		"cover": [
			"phpunit --coverage-html coverage"
		],
		"phan": "phan -d . --long-progress-bar"
	}
}
